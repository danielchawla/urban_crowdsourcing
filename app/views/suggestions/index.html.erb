<h1>Welcome to Urban Crowdsource</h1>
<br/>

<%= link_to 'New Suggestion', suggestions_new_path %><br/><br/>

<%= render :partial => 'form', :locals => {:suggestion => @suggestion} %>

<h2>Here are all the suggestions:</h2>
<br/>

<ol>

<% @suggestions.each do |suggestion| %>
	<li>First Name: <%= suggestion.user.first_name %><br/>
	Overview: <%= suggestion.overview %><br/>
	Location: <%= suggestion.location %><br/>
	Description: <%= suggestion.description %></li><br/>
<% end %>
</ol>
<br/>
